@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div id="header-bottom">
    <!-- Main Search Section Start -->
    <div id="search" class="search-slider">
        <div class="container">
            <h1>حس راحتی کنید وقتی دور از خانه هستید</h1>
            <div class="form-row">
