@model List<CityDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}



<p>
    
    <br />

    <a asp-action="Create" class="btn btn-primary text-white">
        مقصد جدید
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                نام مقصد
            </th>
            <th>
                نام کشور 
            </th>
            <th>
                توضیحات
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               @item.Name
            </td>
            <td>
            @item.Country
            </td>
            <td>
               @item.Description
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Detail" class="btn btn-info" asp-route-id="@item.Id">Detail</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
